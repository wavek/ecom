@model Product

<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            @Model.Price<i class="fas fa-lira-sign"></i>
        </small>
        <div class="card-footer text-center">
            @* <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.ProductId"
                class="btn btn-info btn-sm">İncele</a> *@
            <a asp-controller="Shop" asp-action="Details" asp-route-urlName="@Model.Url"
                class="btn btn-info btn-sm">İncele</a>
            <a asp-controller="Shop" asp-action="addtocart" asp-route-id="@Model.ProductId"
                class="btn btn-info btn-sm">Sepete Ekle</a>
        </div>
    </div>
</div>