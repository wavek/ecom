@* @model Product *@
@model ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
        <h5 class="mb-3">@Model.Product.Name</h5>
        <hr>
        @foreach (var category in @Model.Categories)
        {
            @* <a href="~/products/@category.Url" class="btn btn-link p-0 mb-3">@category.Name</a> *@
            <a asp-controller="shop" asp-action="list" asp-route-category="@category.Url"
            class="btn btn-link p-0 mb-3">@category.Name</a>
            @* startuptaki category adı route için *@
        }
        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price <i class="fas fa-lira-sign"></i></h4>
            <button type="submit" class="btn btn-primary btn-lg">Sepete Ekle</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Product.Description</p>
    </div>
</div>